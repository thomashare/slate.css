// padding setting accross screen sizes
for screen-size in screen-sizes
  
  // no pad elements
  .no-pad
    padding: 0

  // media query settings
  min-width-size = screen-size+'-min-width'
  max-width-size = screen-size+'-max-width'
  min-width = 'min-width: '+min-width-size
  max-width = 'max-width: '+max-width-size

  if padding in overscope
    
    // setup screen sizes for each column size
    @media screen and ({min-width})

      for x in (0..max-padding)
        x-pad = x*pad-step

        .{screen-size}-pad-x-{x}:not(.no-pad)
          padding-left: x*pad-step
          padding-right: x*pad-step
          transition: padding 0.3s ease

        .{screen-size}-pad-{x}:not(.no-pad)
          padding: x*pad-step
          transition: padding 0.3s ease

      for x in (0..max-padding)
        x-pad = x*pad-step
        for y in (0..max-padding)
          y-pad = y*pad-step

          .{screen-size}-pad-{y}-{x}:not(.no-pad)
            padding: y-pad x-pad
            transition: padding 0.3s ease

      for y in (0..max-padding)
        y-pad = y*pad-step

        .{screen-size}-pad-y-{y}:not(.no-pad)
          padding-bottom: y-pad
          padding-top: y-pad
          transition: padding 0.3s ease

      // top bottom left and right padding specifics
      for side in sides
        .{screen-size}-pad-{side}-{x}:not(.no-pad)
          padding-{side}: x-pad
  else 
    for x in (0..max-padding)
      x-pad = x*pad-step

      .pad-x-{x}:not(.no-pad)
        padding-left: x*pad-step
        padding-right: x*pad-step
        transition: padding 0.3s ease

      .pad-{x}:not(.no-pad)
        padding: x*pad-step
        transition: padding 0.3s ease

    for x in (0..max-padding)
      x-pad = x*pad-step
      for y in (0..max-padding)
        y-pad = y*pad-step

        .pad-{y}-{x}:not(.no-pad)
          padding: y-pad x-pad
          transition: padding 0.3s ease

    for y in (0..max-padding)
      y-pad = y*pad-step

      .pad-y-{y}:not(.no-pad)
        padding-bottom: y-pad
        padding-top: y-pad
        transition: padding 0.3s ease

    // top bottom left and right padding specifics
    for side in sides
      .pad-{side}-{x}:not(.no-pad)
        padding-{side}: x-pad
    