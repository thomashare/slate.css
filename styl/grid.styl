// grid setting: Standard
if grid == standard
  
  // set default styles for elements
  nav 
    float: left

  // for each screen size in the screen-sizes array
  for screen-size in screen-sizes
    
    // media query settings
    min-width-size = screen-size+'-min-width'
    max-width-size = screen-size+'-max-width'
    min-width = 'min-width: '+min-width-size
    max-width = 'max-width: '+max-width-size
    
    // setup screen sizes for each column size
    @media screen and ({min-width})

      // set gutter
      gutter = screen-size+'-gutter'

      // set gutters for all required containers. Due to being standard grid, set the column to float
      [class*={screen-size}-]
        float: left
        min-height: 5px
        &:not(nav) *:not([class*='btn']):not(.no-pad):not(.brand):not(.brand > *):not(a):not(.sidebar *)
          padding: gutter*0.5

      // for each column in screen size
      for i in (1..max-columns)
        .{screen-size}-{i}

          // set style defaults
          box-sizing: box-sizing

          // set margin for each column, as long as it's not set to a no-margin element
          &:not([class*=\'-left\']):not([class*=\'-right\']):not([class*={screen-size}-margin-])
            margin: gutter gutter 0 gutter

          // calculate width of columns with no x axis margin removal set
          &:not([class*='-no-margin']):not([class*='-no-x-margin']):not([class*={screen-size}-margin-])
            percentage = (100%/max-columns)*i
            width: 'calc(%s - %s)' % (percentage gutter*2)

          // edit width to compensate lack of margin in no-margin elements
          &[class*='-no-margin'],&[class*='-no-x-margin']
            percentage = (100%/max-columns)*i
            width: percentage
            
          // set transition effect for resizing
          transition: all 0.3s ease
