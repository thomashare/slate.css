// default html styles
body  
  &, &:before, &:after
    box-sizing: box-sizing
    color: rgba(0,0,0,0.75)
    font-family: 'Roboto', 'Helvetica Neaue', 'Helvetica', 'Calibri', 'Arial', sans-serif
    font-size: font-base
    line-height: line-height
    
  *, *:before, *:after
    box-sizing: box-sizing
    
  .sidebar
    ul,ol,li
      padding: 0