nav
  background-color: #FFF
  line-height: line-height
  padding: 0
  
  &.full-width
    .brand
      font-size: 1.5em
      padding: 0
      &> *:not([class$='-left']):not([class$='-right'])
        float: left
      & > img
        max-height: gutter*3.3
      & > :not(img)
        margin-top: gutter*0.8
    
    & > *
      margin: 0

    a
      color: rgba(0,0,0,0.65)
      float: left
      text-decoration: none
      transition: background-color 0.3s ease, color 0.3s ease

      &:hover:not(.brand), &.active:not(.brand)
        background-color: darken(#FFF, 3%)
        color: rgba(0,0,0,0.85)
        
      &:not(.no-pad):not(.brand)
        padding: gutter*1.25 gutter

* + nav.full-width
  margin-top: gutter