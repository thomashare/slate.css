// define nav styles
nav
  background-color: #FFF
  line-height: line-height
  padding: 0

  // default nav styles
  .brand
    & > *:not([class$='-left']):not([class$='-right'])
      float: left

  a
    &:not([class*='text-'])
      color: rgba(0,0,0,0.65)
    float: left
    text-decoration: none
    transition: background-color 0.3s ease, color 0.3s ease

    &:hover:not(.brand), &.active:not(.brand)
      background-color: darken(#FFF, 3%)
      color: rgba(0,0,0,0.85)
        
  // define standard nav style
  &:not(.md):not(.lg)
    .brand
      font-size: 1.25em
      padding: gutter*0.4 gutter*0.25
      
      & > img
        max-height: gutter*1.4
      & > :not(img)
        &:not(.no-y-margin):not(.no-margin)
          margin: gutter*0.3 0
        &:not(.no-pad)
          padding: 0 gutter*0.25

    a
      &:not(.no-pad):not(.brand)
        padding: gutter*0.4 gutter*0.5
      
  // define medium nav styles
  &.md
    .brand
      font-size: 1.5em
      padding: gutter*0.2 gutter*0.25
      
      & > img
        max-height: gutter*1.9
      & > :not(img)
        &:not(.no-y-margin):not(.no-margin)
          margin: gutter*0.55 gutter*0.15
        &:not(.no-pad)
          padding: 0 gutter*0.25

    a
      &:not(.no-pad):not(.brand)
        padding: gutter*0.75 gutter*0.75        
        
  // define large nav styles
  &.lg
    .brand
      font-size: 2em
      line-height: gutter*2.5
      padding: gutter*0.35
      
      & > img
        max-height: gutter*2.6
      & > :not(img)
        margin: 0 gutter*0.35

    a
      &:not(.no-pad):not(.brand)
        padding: gutter*1.25 gutter
        
        
