nav
  background-color: #FFF
  line-height: line-height
  
  &.full-width
    float: left
    margin: 0
    padding: 0
    width: 100%
    
    .brand
      padding: gutter
      img 
        max-height: 80px
    
    & > *
      margin: 0

    a
      color: #666
      float: left
      text-decoration: none
      transition: background-color 0.075s ease

      &:hover
        background-color: darken(#FFF, 2%)
        color: darken(#666, 50%)
        
      &:not(.no-pad)
        padding: gutter*2 gutter
        
      &.no-pad
        padding: 0
