.sidebar
  float: left
  ul 
    list-style: none
    margin: 0
    padding: 0

    li 
      display: inline-block
      padding: 0
      width: 100%

  a
    color: rgba(link-color, 0.75)
    display: block
    &,&:hover
      text-decoration: none
    transition: background-color 0.3s ease, color 0.3s ease
    &:hover,&.active
      background-color: light(link-color) ? rgba(0,0,0,0.85) : rgba(255,255,255,0.85)
      color: rgba(link-hover, 0.75)
    &:active
      color: rgba(link-active, 0.75)
    &:focus
      color: rgba(link-focus, 0.75)
