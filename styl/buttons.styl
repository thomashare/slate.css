[class*='btn']
  background-color: #DDD
  border-radius: 4px
  border: none
  cursor: pointer
  outline: none
  padding: 10px 12px
  
  &:hover
    background-color: darken(#DDD, 10%)
  
  for color in colors
    &.btn-{color}
      color-name = color+'-color'
      color: light(color-name)? #000 : #FFF
      background-color: color-name
      
      &:hover
        background-color: darken(color-name, 10%)
