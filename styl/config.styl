// Slate configuration

// css reset file
reset = 'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css'

// columns
max_columns = 12

// gutter
gutter = 20px

// fonts
font-base = 1em
line-height = 0.1em

// options
mobile-first = true
grid = standard

// misc
box-sizing = border-box

// nav settings
nav-image-height = gutter*2